---
import Layout from '../layouts/Layout.astro';
import BusinessList from '../components/BusinessList.astro';
---

<Layout title="Home">
  <div class="hero">
    <h2>Discover Local Businesses</h2>
    <p>Find the best services and products in your area</p>
  </div>
  <BusinessList />
</Layout>

<style>
  .hero {
    background-color: var(--primary-color);
    color: var(--white);
    text-align: center;
    padding: 3rem 1rem;
    margin: -2rem -1rem 2rem -1rem;
  }

  .hero h2 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }

  .hero p {
    font-size: 1.2rem;
    margin-top: 0;
  }
</style>
