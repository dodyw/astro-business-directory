---
import BusinessList from '../components/BusinessList.astro';

export async function getStaticPaths() {
  const response = await fetch('http://localhost:4321/categories.json');
  const data = await response.json();
  
  return data.categories.map(category => ({
    params: { category: category.id },
    props: { categoryName: category.name, categories: data.categories }
  }));
}

const { category } = Astro.params;
const { categoryName, categories } = Astro.props;

function renderCategoryMenu(categories, currentPath = '') {
  return `
    <ul>
      ${categories.map(cat => `
        <li>
          <a href="/${currentPath}${cat.id}" ${cat.id === category ? 'class="active"' : ''}>${cat.name}</a>
          ${cat.subcategories ? renderCategoryMenu(cat.subcategories, `${currentPath}${cat.id}/`) : ''}
        </li>
      `).join('')}
    </ul>
  `;
}

const categoryMenu = renderCategoryMenu(categories);
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{categoryName} - Business Directory</title>
	</head>
	<body>
		<header>
			<h1>{categoryName} Businesses</h1>
			<a href="/">Back to Home</a>
		</header>
		<div class="container">
			<nav>
				<h2>Categories</h2>
				<Fragment set:html={categoryMenu} />
			</nav>
			<main>
				<BusinessList category={category} />
			</main>
		</div>
		<footer>
			<p>&copy; 2023 Business Directory. All rights reserved.</p>
		</footer>
	</body>
</html>

